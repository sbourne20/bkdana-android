<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.transaksi.detail.DetailTransaksiActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            app:subtitleTextAppearance="@style/Toolbar.SubTitleText"/>

    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
    <android.support.v7.widget.CardView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <TableRow
                android:layout_margin="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No. Transaksi Pendanaan"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/nav_grey"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No. Transaksi Pendanaan"
                    android:textColor="@color/nav_grey"
                    />
            </TableRow>
            <TableRow
                android:layout_margin="2dp">
                <TextView
                    android:id="@+id/tvNoTransaksi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DD-12ou312u30"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tvNoTransaksiSub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PM-2000F4152832E56"
                    android:textColor="@android:color/holo_red_light"
                    
                    />
            </TableRow>
            <TableRow android:layout_margin="5dp"/>
            <TableRow android:layout_margin="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Transaksi"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/nav_grey"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Peminjam"
                    
                    android:textColor="@color/nav_grey"
                    />
            </TableRow>
            <TableRow android:layout_margin="2dp">
                <TextView
                    android:id="@+id/tvNamaTransaksi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pendanaan"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tvNamaPeminjam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Andhika Desta Permana"
                    
                    />
            </TableRow>
            <TableRow android:layout_margin="5dp"/>
            <TableRow  android:layout_margin="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tenor"
                    android:textColor="@color/nav_grey"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jatuh Tempo"
                    android:textColor="@color/nav_grey"
                    
                    />
            </TableRow>
            <TableRow  android:layout_margin="2dp">
                <TextView
                    android:id="@+id/tvTenor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12 Bulan"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    />
                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="01/01/1970"
                    
                    />
            </TableRow>
            <TableRow android:layout_margin="5dp"/>
            <TableRow android:layout_margin="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Pendanaan"
                    android:textColor="@color/nav_grey"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jumlah PInjaman"
                    android:textColor="@color/nav_grey"
                    
                    />
            </TableRow>
            <TableRow android:layout_margin="2dp">
                <TextView
                    android:id="@+id/tvJumDana"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10,000,000 IDR"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tvJumPijam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 IDR"
                    
                    />
            </TableRow>
            <TableRow android:layout_margin="5dp"/>
            <TableRow android:layout_margin="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Saldo Diterima"
                    android:textColor="@color/nav_grey"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textColor="@color/nav_grey"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/tvTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10,150,000 - PPH % = 10,150,000 IDR (PPH % : 0 IDR)"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tvStatusPinjam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Review"
                    
                    />
            </TableRow>
            <TableRow android:layout_margin="5dp"/>
            <TableRow android:layout_margin="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textColor="@color/nav_grey"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    />
            </TableRow>
            <TableRow  android:layout_margin="2dp">
                <TextView
                    android:id="@+id/tvStatusDana"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Approve"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginBottom="30dp"
                    />
            </TableRow>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rvView2"
                />
        </TableLayout>
    </android.support.v7.widget.CardView>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>