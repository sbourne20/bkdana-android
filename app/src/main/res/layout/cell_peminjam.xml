<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_margin="18dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:padding="4dp">
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agus "
                    android:textStyle="bold"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tenor"
                    android:layout_weight="1"
                    android:textStyle="bold"/>
            </TableRow>
            <TableRow
                android:padding="4dp">
                <TextView
                    android:id="@+id/tvNoTransaksi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="XAAF-AAAS"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tvTenor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 Bulan"
                    android:layout_weight="1"
                    android:textColor="@android:color/holo_red_light" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:gravity="right">
                <Button
                    android:id="@+id/btnDetail"
                    android:textColor="@android:color/white"
                    android:layout_height="24dp"
                    android:layout_width="match_parent"
                    android:text="Detial"
                    android:background="@drawable/btn_aqua_rounded" />
            </TableRow>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/nav_grey">
                <TableRow
                    android:padding="4dp">
                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="50"
                        android:layout_weight="1"
                        android:progressDrawable="@drawable/bg_aqua_progress"
                        />
                </TableRow>
                <TableRow
                    android:padding="4dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Pinjaman"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/tvTotalPinjaman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RP. 10 JT"
                        android:textStyle="bold"/>
                </TableRow>
                <TableRow
                    android:padding="4dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Pendanaan"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/tvTotalDana"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. 10 JT"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_light" />
                </TableRow>
                <TableRow
                    android:padding="4dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Grade"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/tvGrade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A"
                        android:gravity="center"
                        />
                </TableRow>
                <TableRow
                    android:padding="4dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lender"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/tvLender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 Orang"
                        android:gravity="center"
                        />
                </TableRow>
            </TableLayout>
        </TableLayout>
    </android.support.v7.widget.CardView>