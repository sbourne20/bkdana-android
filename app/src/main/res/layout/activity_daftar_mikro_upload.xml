                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:inputType="numberDecimal"
                    android:lines="1"
                    android:padding="5dp"
                    android:background="@drawable/bg_edit_text"
                    android:id="@+id/etPinjaman"
                    />

