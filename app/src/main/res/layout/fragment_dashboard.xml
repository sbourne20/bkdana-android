<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".modules.home.DashboardFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="9dp">
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_default_profile"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvName"
                android:text="Andhika Desta Permana"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_lonceng"
            android:layout_gravity="center">
            <TextView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/ic_oval"/>
        </RelativeLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <rzgonz.core.kotlin.view.CustomeViewPager
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/cvpBanner"
                />
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="9dp"/>
            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                app:ci_drawable_unselected="@drawable/circle_radius_unselected"
                app:ci_drawable="@drawable/circle_radius_selected"
                />
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="9dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="9dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Saldo"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:id="@+id/lbToltal"
                        />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvTotal"
                            android:text="2.535.000 IDR"
                            android:textColor="@color/aqua"
                            android:textSize="22sp"
                            android:layout_below="@+id/lbToltal"
                            android:layout_weight="2"
                            android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_coin" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvTotal"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipe User : "
                            android:textColor="@color/Grey300" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvPendanaan"
                            android:text="Pendana"
                            android:layout_weight="2"
                            android:textColor="@color/aqua" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jumlah Pendanaan : 1000"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:textColor="@color/Grey300"
                           />
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transaksi Repayment"
                android:textSize="21sp"
                android:textStyle="bold"
                android:layout_margin="9dp"
                android:layout_marginTop="10dp"
                 />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pendanaan : 12 Bulan"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="@color/Red500"
                android:layout_marginTop="10dp"
                />
            <TableRow
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jatuh Tempo : 20-10.2018"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10.000.000 IDR"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    />
            </TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pinjaman Kilat : 7 Hari"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="@color/Red500"
                android:layout_marginTop="10dp"
                />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jatuh Tempo : 20-10.2018"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.000.000 IDR"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    />
            </TableRow>
        </LinearLayout>
    </ScrollView>

</LinearLayout>