<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.splashscreen.WorktourFragemnt"
    android:layout_gravity="center">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="18sp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="top"
            android:orientation="vertical">
            <ImageView
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:src="@drawable/icon_why_1"
                android:layout_gravity="center"
                android:id="@+id/imgIcon" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Akses di multi perangkat"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_margin="4sp"
                android:textStyle="bold"
                android:id="@+id/tvTitle" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BKDana hadir di multi platform, baik di Web,Android dan iOS, memudahkan transaksi dimanapun dan kapanpun."
                android:textAlignment="center"
                android:layout_margin="4sp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:textSize="14sp"
                android:id="@+id/tvSubTitle" />

        </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lewati"
                android:id="@+id/btnSkip"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:paddingRight="64dp"
                android:paddingLeft="64dp"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="18dp"
                android:background="@drawable/btn_aqua_rounded"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</FrameLayout>