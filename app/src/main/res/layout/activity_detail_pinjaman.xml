<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.transaksi.detail.DetailTransaksiActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            app:subtitleTextAppearance="@style/Toolbar.SubTitleText"/>

    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.CardView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                >
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TableRow
                android:background="@color/Grey300"
                android:padding="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pendanaan"
                    android:textStyle="bold"
                    android:textColor="@color/grey"
                    android:layout_weight="2"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvQuota"
                    android:text="Kuota 0%"
                    android:textColor="@color/colorPrimary"
                    />
            </TableRow>
                <TableRow android:layout_margin="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Pinjaman"
                        android:textStyle="bold"
                        android:layout_weight="2"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Totak Pendanaan"

                        />
                </TableRow>
                <TableRow android:padding="5dp">
                    <TextView
                        android:id="@+id/tvTotalpinjaman"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10.000.000 IDR"
                        android:textStyle="bold"
                        android:layout_weight="2"
                        />
                    <TextView
                        android:id="@+id/tvTolalPendaanan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10,0000,0000"

                        />
                </TableRow>
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/bg_aqua_progress"
                    android:layout_margin="5dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvProgress"
                    android:layout_margin="5dp"
                    android:text="0 Lender mengikuti pendanaan ini"
                    />
            </TableLayout>
            </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@color/Grey300"
                android:text="Pinjaman"
                />
            <TableRow
                android:layout_margin="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Peminjam"
                    android:textStyle="bold"
                    android:textColor="@color/nav_grey"
                    android:layout_weight="2"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No. Transaksi"
                    android:textColor="@color/nav_grey"
                    />
            </TableRow>
            <TableRow
                android:layout_margin="2dp">
                <TextView
                    android:id="@+id/tvNamaPeminjam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mira Eltri"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    />
                <TextView
                    android:id="@+id/tvNoTransaksi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PM-2000F4152832E56"
                    android:textColor="@android:color/holo_red_light"
                    
                    />
            </TableRow>
            <TableRow android:layout_margin="5dp"/>
            <TableRow android:layout_margin="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Grade dan Rate"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    android:textColor="@color/nav_grey"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tenor"
                    android:textColor="@color/nav_grey"
                    />
            </TableRow>
            <TableRow android:layout_margin="2dp">
                <TextView
                    android:id="@+id/tvGrade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    />
                <TextView
                    android:id="@+id/tvTenor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" 7 Hari"
                    />
            </TableRow>
        </TableLayout>
    </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                >
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:background="@color/Grey300"
                        android:text="Informasi Peminjam"
                        />
            <TableRow android:layout_margin="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pekerjaan"
                    android:textColor="@color/nav_grey"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat"
                    android:textColor="@color/nav_grey"
                    
                    />
            </TableRow>
            <TableRow android:layout_margin="5dp"
                >
                <TextView
                    android:id="@+id/tvPekerjaan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mira Eltri"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tvAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Apartmen Gateway Blok D10-09, Jakarta Selatan, DKI Jakareta"
                    />
            </TableRow>
            <TableRow android:layout_margin="5dp"/>
            <TableRow android:layout_margin="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Usaha"
                    android:textColor="@color/nav_grey"
                    android:textStyle="bold"
                    />
            </TableRow>

            <TableRow
                android:layout_margin="5dp">
                <TextView
                    android:id="@+id/tvJenisUsaha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MIra Room Guest HO"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    />
            </TableRow>
            <TableRow android:layout_margin="5dp"/>
            <TableRow android:layout_margin="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lokasi (Kota)"
                    android:textColor="@color/nav_grey"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lama Usaha"
                    android:textColor="@color/nav_grey"
                    android:textStyle="bold"
                    />
            </TableRow>
            <TableRow  android:layout_margin="5dp">
                <TextView
                    android:id="@+id/tvLokasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jakarta"
                    android:textStyle="bold"
                    android:layout_marginBottom="30dp"
                    />
                <TextView
                    android:id="@+id/tvLamaUsaha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3 Tahun"
                    android:textStyle="bold"
                    android:layout_marginBottom="30dp"
                    />
            </TableRow>
        </TableLayout>
    </android.support.v7.widget.CardView>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnKembali"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Kembali"
                    android:layout_weight="1"
                    android:layout_margin="18dp"
                    android:layout_gravity="right|center_vertical"
                    android:background="@drawable/btn_aqua_rounded" />
                <Button
                    android:id="@+id/btnBayar"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Biayai"
                    android:layout_weight="1"
                    android:layout_gravity="right|center_vertical"
                    android:layout_margin="18dp"
                    android:background="@drawable/btn_blue_rounded" />
            </TableRow>
        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>