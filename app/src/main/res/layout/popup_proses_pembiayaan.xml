<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="9dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/black80"
        android:text="PROSES PEMBIAYAAN"
        android:layout_margin="9dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saldo : 2,535,000 IDR"
        android:textColor="@color/aqua"
        android:layout_margin="5dp"
        android:textSize="12sp"
        android:id="@+id/tvSaldo"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tagihan : 2,535,000 IDR"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:textSize="12sp"
        android:id="@+id/tvTagihan"
        android:textColor="@color/Red500"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jumlah Pendanaan"
        android:textAlignment="center"
        android:layout_margin="15dp"
        android:textSize="12sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2,535,000.00"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:textSize="12sp"
        android:textColor="@color/Red500"/>
    <Button
        android:id="@+id/btnSubmit"
        android:textColor="@android:color/white"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:text="Detial"
        android:background="@drawable/btn_aqua_rounded" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18sp"
        android:textColor="@color/black80"
        android:text="* Catatan : Saldo Anda akan dikurangi tagihan Anda jika menekan tombol Submit. JIka saldo Anda tidak mencukupi harap segera melakukan Top Up terlebih dahulu."
        android:layout_marginBottom="18dp"/>

</LinearLayout>