<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.daftar.agri.agri1.DaftarAgriActivity">
    <include layout="@layout/header_daftar"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:text="Informasi Pribadi
Silahkan masukan data diri Anda sebenar - benarnya."
                android:textColor="@color/grey"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* Tempat Lahir"
                    android:textColor="@color/grey" />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etTempatLahir"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_edit_text"
                    android:padding="5dp"
                    android:singleLine="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp">

                <CheckBox
                    android:id="@+id/chkdomisili"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat Domisili Sesuai dengan KTP"
                    android:textColor="@color/grey" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/alamatDom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* Alamat Domisili"
                    android:textColor="@color/grey" />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_edit_text"
                    android:gravity="top|left"
                    android:padding="5dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/kotaDom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* Kota Domisili"
                    android:textColor="@color/grey" />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etKota"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_edit_text"
                    android:padding="5dp"
                    android:singleLine="true" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/provonsiDom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* Provinsi Domisili"
                    android:textColor="@color/grey" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:id="@+id/spProvinsi"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_edit_text" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/kodeposDom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* Kode Pos Domisili"
                    android:textColor="@color/grey" />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etKodePos"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_edit_text"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:singleLine="true" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/pekerjaanDom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* Pekerjaan"
                    android:textColor="@color/grey" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:id="@+id/spPekerjaan"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_edit_text"
                        android:entries="@array/array_pekerjaan"
                        android:prompt="@string/pilih" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/spPekerjaan"
                        android:layout_alignBottom="@id/spPekerjaan"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/grey_rounded"
                        android:paddingLeft="9dp"
                        android:paddingRight="9dp"
                        app:srcCompat="@drawable/ic_arrow_down" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nikDom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* Nomor NIK"
                    android:textColor="@color/grey" />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etNIK"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_edit_text"
                    android:inputType="number"
                    android:padding="5dp"
                    android:singleLine="true" />

            </LinearLayout>

            <Button
                android:id="@+id/btnSelanjutnya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_purpel_rounded"
                android:padding="18dp"
                android:text="Selanjutnya"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
